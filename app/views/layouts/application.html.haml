!!! Strict
%html{html_attrs}
  
  %head
    %title
      = h(yield(:title) || "Untitled")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'club'
    / = stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.7/themes/base/jquery-ui.css"
    / = javascript_include_tag :defaults
    / %script{ :type => "text/javascript", :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js'}
    / %script{ :type => "text/javascript", :src => 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.2/jquery-ui.min.js'}
    =javascript_include_tag 'jquery-1.4.4'
    =javascript_include_tag 'jquery-ui-1.8.7.custom.min'
    / = stylesheet_link_tag :all
    = csrf_meta_tag
    
    / = javascript_include_tag 'recruitd'
    = yield(:head)
  
  %body
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      
      - if user_signed_in?
        Signed in as #{current_user.email}
        |
        - if current_user.is_student?
          = link_to "Home", home_s_path
          |
          = link_to "Public", current_user.entity
          |
          = link_to "Manage", manage_s_path
          |
          = link_to "Settings", settings_s_path
        - elsif current_user.is_company_entity?
          = link_to "Home", home_c_path
          |
          = link_to "Browse", browse_c_path
          |
          = link_to "Public", current_user.entity
          |
          = link_to "Manage", manage_c_path
          |
          = link_to "Settings", settings_c_path
        |
        = link_to "Sign out", destroy_user_session_path

      - else
        = link_to "Sign up", new_user_registration_path
        or #{link_to "sign in", new_user_session_path}
      
      
      - if show_title?
        %h1=h yield(:title)
      
      = yield
