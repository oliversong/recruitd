=render :partial => "shared/update"
#maincontent
  %h1 Sign up
  %h2 Use either LinkedIn or Facebook, or create a new username and password.
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    %p
      = f.label :email
      %br/
      = f.email_field :email
    %p
      = f.label :password
      %br/
      = f.password_field :password
    %p
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation
    %p= f.submit "Sign up"
  
    %ul#social-icons
      - User.omniauth_providers.each do |provider|
        %li= link_to image_tag("social-icons/#{provider}_32.png", :alt => "Sign in with #{provider.to_s.titleize}"), omniauth_authorize_path(User, provider)
    .clear
  - if devise_mapping.recoverable? && controller_name != 'passwords'
    = link_to "Forgot your password?", new_password_path(User)
    %br/