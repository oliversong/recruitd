<h1>New company_student</h1>

<% form_for(@company_student) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :company_id %><br />
		<%= f.collection_select(:company_id, Company.all, :id, :name, {:prompt => true} )%>
  </p>
  <p>
    <%= f.label :student_id %><br />
		<%= f.collection_select(:student_id, Student.all, :id, :name, {:prompt => true} )%>
  </p>
  <p>
    <%= f.label :comments %><br />
    <%= f.text_area :comments %>
  </p>
  <p>
    <%= f.label :student_follows_company %><br />
    <%= f.check_box :student_follows_company %>
  </p>
  <p>
    <%= f.label :company_follows_student %><br />
    <%= f.check_box :company_follows_student %>
  </p>
  <p>
    <%= f.label :recruiter_id_for_follow %><br />
		<%= f.collection_select(:recruiter_id_for_follow, Recruiter.all, :id, :name, {:prompt => true}) %>
  </p>
  <p>
    <%= f.label :student_score %><br />
    <%= f.text_field :student_score %>
  </p>
  <p>
    <%= f.label :student_dismissed_until %><br />
    <%= f.datetime_select :student_dismissed_until %>
  </p>
  <p>
    <%= f.label :company_score %><br />
    <%= f.text_field :company_score %>
  </p>
  <p>
    <%= f.label :company_dismissed_until %><br />
    <%= f.datetime_select :company_dismissed_until %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', company_students_path %>