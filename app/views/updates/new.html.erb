<h1>New update</h1>

<% form_for(@update) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :person_id %><br />
	<%= f.collection_select(:person_id, User.all, :id, :name, {:prompt => true}) %>
    <%#= f.text_field :person_id %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', updates_path %>