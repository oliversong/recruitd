<h1>Listing student_terms</h1>

<table>
  <tr>
    <th>Details</th>
    <th>Student</th>
    <th>Term</th>
  </tr>

<% @student_terms.each do |student_term| %>
  <tr>
    <td><%=h student_term.details %></td>
    <td><%=h student_term.student_id %></td>
    <td><%=h student_term.term_id %></td>
    <td><%= link_to 'Show', student_term %></td>
    <td><%= link_to 'Edit', edit_student_term_path(student_term) %></td>
    <td><%= link_to 'Destroy', student_term, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New student_term', new_student_term_path %>