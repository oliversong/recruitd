:javascript
  $(document).ready(function(){
    $( "#award_name" ).autocomplete({
      source: "/autocomplete_searches/term_names/award",
      focus: function(event, ui) { 
        $("#award_id").val(ui.item.id);
        $("#award_detail").show();
        $("#award_description_label").html("Description in our database; modify below if you feel this needs amendment:");
        $("#award_description_box").val(ui.item.description);
      }
    });
  });
  
  $(function() {
    $("#description_box").change( function() {
    })
  });
  
=form_tag(add_award_s_path, :method => "post") do
  = text_field_tag "award[name]", params[:term], :class => "auto_search_complete", :size => 30
  = submit_tag "add", :name => nil, :class => 'button', :id => "award_add"
  %br
  = hidden_field_tag "award[id]", nil
  %div.detail#award_detail{:style => "display:none" }
    %em
      %span#award_description_label Description
    %br
    = text_area_tag "comments", nil, :cols => 50, :rows => 4