:javascript
  $(document).ready(function(){
    $( "#interest_name" ).autocomplete({
      source: "/autocomplete_searches/interest_names",
      focus: function(event, ui) { 
        $("#interest_id").val(ui.item.id);
        $("#interest_detail").show();
        $("#interest_description_label").html("Description in our database; modify below if you feel this needs amendment:");
        $("#interest_description_box").val(ui.item.description);
      }
    });
  });
  
  $(function() {
    $("#description_box").change( function() {
    })
  });
  
=form_tag(add_interest_s_path, :method => "post") do
  = text_field_tag "interest[name]", params[:term], :class => "auto_search_complete", :size => 30
  = submit_tag "add", :name => nil, :class => 'button', :id => "interest_add"
  %br
  = hidden_field_tag "interest[id]", nil
  %div.detail#interest_detail{:style => "display:none" }
    %em
      %span#interest_description_label Description
    %br
    = text_area_tag "comments", nil, :cols => 50, :rows => 4