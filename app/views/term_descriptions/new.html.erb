<h1>New tag_description</h1>

<% form_for(@tag_description) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :user_id %> (description author)<br />
	<%= f.collection_select(:user_id, User.all, :id, :name, {:prompt => true}) %>
    <%#= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :term_id %><br />
    <%= f.collection_select(:term_id, Term.all, :id, :name, {:prompt => true}) %>
  </p>
  <!-- <p>
    <%= f.label "Update to another description?" %><br />
    <%= f.text_field :update_of_tag_id %>
  </p> -->
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', tag_descriptions_path %>