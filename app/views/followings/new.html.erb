<h1>New following</h1>

<% form_for(@following) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :follower_id %><br />
    <%= f.text_field :follower_id %>
  </p>
  <p>
    <%= f.label :following_id %><br />
    <%= f.text_field :following_id %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', followings_path %>