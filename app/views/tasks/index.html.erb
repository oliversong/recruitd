<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Text</th>
    <th>Reference</th>
    <th>Reference type</th>
    <th>Is reused</th>
    <th>User</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.name %></td>
    <td><%=h task.text %></td>
    <td><%=h task.reference_id %></td>
    <td><%=h task.reference_type %></td>
    <td><%=h task.is_reused %></td>
    <td><%=h task.person_id %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>