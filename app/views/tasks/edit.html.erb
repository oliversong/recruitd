<h1>Editing task</h1>

<% form_for(@task) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.label :reference_id %><br />
    <%= f.text_field :reference_id %>
  </p>
  <p>
    <%= f.label :reference_type %><br />
    <%= f.text_field :reference_type %>
  </p>
  <p>
    <%= f.label :is_reused %><br />
    <%= f.check_box :is_reused %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @task %> |
<%= link_to 'Back', tasks_path %>