- form_for @job do |f|
  = f.error_messages
  %p
    = f.label :company_id
    %br
    = f.text_field :company_id
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :responsibilities
    %br
    = f.text_area :responsibilities
  %p
    = f.label :basic_qualifications
    %br
    = f.text_area :basic_qualifications
  %p
    = f.label :desired_qualifications
    %br
    = f.text_area :desired_qualifications
  %p
    = f.label :other_information
    %br
    = f.text_area :other_information
  %p
    = f.label :description
    %br
    = f.text_area :description
  %p
    = f.submit
