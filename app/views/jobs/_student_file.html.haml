:javascript
  function toggleFileBox(){
    $("#student_file_box").toggle()
    if( $("#toggle_text").html() == "show student file"){
      $("#toggle_text").html("hide student file")
    }
    else{
      $("#toggle_text").html("show student file")
    }
  }

= form_for student_file, :url => update_file_job_path(job), :html => {:method => :put, :style=> "width: 80%; background: #99CCFF; margin: 1em; padding: 1em;" } do |f|
  =link_to "show student file", "#", {:onClick => "toggleFileBox()", :id => "toggle_text" }
  #student_file_box{:style => "display:none"}
    %p
      = f.hidden_field :job_id
      = f.hidden_field :student_id
      rating: 
      = f.select :rating, StudentFile::RATINGS, {:include_blank => true}
    %p
      notes:
      %br
      = f.text_area :notes, :rows => 10, :cols => 50
    %p
      = f.submit "update record"
