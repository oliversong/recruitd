.comment
  .commentcontent
    -# inputs: commentable
    %h2 Post a new comment
    = form_for Comment.new(:commentable_id => commentable.id, :commentable_type => commentable.class.name) do |f|
      %p
        Title:
        %br/
        = f.text_field :title
        %br/
        Body:
        %br/
        = f.text_area :comment, :rows => 8
        = f.hidden_field :commentable_id
        = f.hidden_field :commentable_type
      %p
        = f.submit
    
  .commentauthor
  .hr2{:style=>"margin-bottom:0px"}